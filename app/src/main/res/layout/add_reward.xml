<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReward">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/bg_color"
        android:gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEnd="10dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@mipmap/icon_back_arrow">

        <TextView
            android:id="@+id/add_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="添加奖励"
            android:textColor="@color/colorwhite"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="3dp" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="@mipmap/ic_check_white"
            android:onClick="addaReward"
            android:textColor="@color/colorwhite"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/reward_img"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/habit_1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="299dp"
        android:layout_height="119dp"
        android:layout_marginTop="8dp"
        android:hint="自定义奖励名称"
        android:inputType="text"
        android:maxLength="20"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reward_img" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="挑选奖励图标："
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/img1"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_1"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img2"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_2"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img3"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_3"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img4"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_4"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img5"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_5"
            android:button="@null" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <RadioButton
            android:id="@+id/img6"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_6"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img7"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_7"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img8"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_8"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img9"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_9"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img10"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_10"
            android:button="@null" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup1">

        <RadioButton
            android:id="@+id/img11"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_11"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img12"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_12"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img13"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_13"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img14"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_14"
            android:button="@null" />

        <RadioButton
            android:id="@+id/img15"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/reward_15"
            android:button="@null" />


    </RadioGroup>


</android.support.constraint.ConstraintLayout>